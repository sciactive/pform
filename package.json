    "build-ielt8": "lessc less/pform-ie-lt-8.less > css/pform-ie-lt-8.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/pform.git"
  },
